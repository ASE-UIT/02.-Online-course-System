{
  "server": {
    "port": 3000,
    "host": "localhost",
    "api_version": "/api/v1"
  },
  "request_limit": {
    "limit": "100kb"
  },
  "cors": {
    "origin": "*",
    "methods": ["GET", "POST", "PUT", "DELETE", "UPDATE"],
    "allowedHeaders": [
      "X-Requested-With",
      "X-HTTP-Method-Override",
      "Content-Type",
      "Accept",
      "Observe",
      "Authorization"
    ]
  },
  "helmet": false,
  "enviroment": "default",
  "morgan": {
    "format": "dev"
  },
  "swagger": {
    "enable": false
  },
  "database": {
    "sync": false
  },
  "media_service": {
    "url": "https://csairs.website/media",
    "video_bucket": {
      "path": "eduhub-video"
    },
    "image_bucket": {
      "path": "eduhub-image"
    }
  },
  "print_service": {
    "url": "http://eduhub.io.vn/eduhub-print-service"
  }
}
