{
  "name": "express-clean-base-typeorm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start:dev": "NODE_ENV=development nodemon --exec npx ts-node -r tsconfig-paths/register ./src/server.ts",
    "start:prod": "NODE_ENV=production node ./dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run typeorm migration:create ./src/database/migrations/$npm_config_name",
    "migration:generate": "npm run build && npx typeorm migration:generate ./src/database/migrations/migrations -d ./dist/database/db.datasource.js",
    "migration:run": "npm run build && npx typeorm migration:run -d ./dist/database/db.datasource.js",
    "migration:sync": "npm run build && npx typeorm schema:sync -d ./dist/database/db.datasource.js",
    "migration:revert": "npm run typeorm -- migration:revert",
    "utils:generate-key": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "lint": "eslint ./src",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "prepare": "cd .. && husky main/.husky",
    "create:module": "ts-node ./src/utils/tools/auto-generate-module.ts"
  },
  "keywords": [],
  "author": "chabuuuu",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.11",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "minio": "^8.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "response-formater": "^1.0.2",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  }
}
